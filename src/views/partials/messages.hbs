{{#if success_msg}}
<div class="alert alert-success alet-dismissible fade show text-center w-50 mx-auto mt-3" role="alert">
    <h5>{{success_msg}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </h5>
</div>
{{/if}}

{{#if error_msg}}
<div class="alert alert-danger alet-dismissible fade show text-center w-50 mx-auto mt-3" role="alert">
    <h5>
        {{error_msg}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </h5>
</div>
{{/if}}